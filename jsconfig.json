{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "base": ["src/base"],
      "components": ["src/components"],
      "pages": ["src/pages"],
      "utils": ["src/utils"],
      "constants": ["src/constants"],
      "store": ["src/store"]
    },
    "target": "ES6",
    "module": "es6",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}